<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="407.0" prefWidth="445.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.PaymentController">
    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Total Price:" />
        <Label fx:id="totalPriceLabel" layoutX="150.0" layoutY="20.0" />

        <Label layoutX="20.0" layoutY="60.0" text="Estimated Waiting Time:" />
        <Label fx:id="estimatedWaitingTimeLabel" layoutX="150.0" layoutY="60.0" />

        <Label layoutX="20.0" layoutY="100.0" text="Card Number:" />
        <TextField fx:id="cardNumberField" layoutX="150.0" layoutY="100.0" />

        <Label layoutX="20.0" layoutY="140.0" text="Expiry Date (MM/YY):" />
        <TextField fx:id="expiryDateField" layoutX="150.0" layoutY="140.0" />

        <Label layoutX="20.0" layoutY="180.0" text="CVV:" />
        <TextField fx:id="cvvField" layoutX="150.0" layoutY="180.0" />
        
        <Label layoutX="18.0" layoutY="221.0" text="Credits to Use:" />
		<TextField fx:id="creditsField" layoutX="152.0" layoutY="217.0" prefHeight="25.0" prefWidth="149.0" promptText="Enter credits" />

        <Button fx:id="confirmPaymentButton" layoutX="76.0" layoutY="360.0" onAction="#handleConfirmPayment" text="Confirm Payment" />

		<Label fx:id="successMessageLabel" layoutX="20.0" layoutY="300.0" textFill="green" />
        <Label fx:id="errorMessage" layoutX="20.0" layoutY="260.0" textFill="red" />
      <Button fx:id="goToDashboardButton" layoutX="206.0" layoutY="360.0" mnemonicParsing="false" onAction="#goToDashboard" text="Go To Dashbboard" />
    </children>
</AnchorPane>
